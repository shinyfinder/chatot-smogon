{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "files": [
        "src/chatot.ts"
    ],
    "include": [
        "./**/*.ts",
        "src/db/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    
}