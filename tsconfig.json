{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": "./src/",
        "outDir": "./.cache",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "incremental": true,
    },
    "ts-node": {
        "swc": true,
    }
}